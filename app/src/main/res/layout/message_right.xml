<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for the right side messages (messages a User sends) -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_padding">

    <TextView
        android:id="@+id/message_txt_view_msg_right"
        style="@style/white_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/right_chat_bubble"
        android:maxWidth="224dp"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        tools:text="@string/string_latest_message" />

    <TextView
        android:id="@+id/time_txt_view_msg_right"
        style="@style/white_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/message_txt_view_msg_right"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toStartOf="@id/message_txt_view_msg_right"
        android:layout_toLeftOf="@id/message_txt_view_msg_right"
        android:textSize="12sp"
        android:visibility="invisible"
        tools:text="@string/string_time_ex"
        tools:textColor="@color/mostly_black"
        tools:visibility="visible" />

</RelativeLayout>