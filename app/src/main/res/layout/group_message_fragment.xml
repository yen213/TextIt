<?xml version="1.0" encoding="utf-8"?>
<!-- Screen where Users can see a list of all their group messages. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_black"
    android:padding="@dimen/layout_padding">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/group_message_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/layout_padding" />

    <TextView
        android:id="@+id/no_messages_group_message_fragment"
        style="@style/white_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/string_no_messages"
        android:textSize="20sp"
        android:textStyle="italic"
        android:visibility="invisible"
        tools:visibility="visible" />

</RelativeLayout>